<div class="d-flex justify-content-center pt-5">
  <!-- booking confirmed -->
  <div class="booking-confirmed mr-5">
    <!-- check i -->
    <div class="text-center">
      <i class="fa fa-check-circle" aria-hidden="true"></i>
    </div>
    <!-- your booking is confirmed -->
    <h3 
      style="font-weight: 500; font-size: 22px;" 
      id="user-h3"
      class="text-center pb-4">
        <%= @booking.user.first_name %>, your booking is confirmed
    </h3>
    <!-- card -->
    <div class="cards">
      <div id="card-bookings-show-offer" class="card-advertisement d-flex flex-column justify-content-between p-4">
        <!-- top -->
        <div id="top-card-offer" class="d-flex top-card">
          <%=  cl_image_tag @offer.user.photo.key, :width => 148, :height => 148, :crop => :fill %>
          <div class="top-text-card">
            <h2><%= @offer.category.name %></h2>
            <p><%= @offer.subcategory.name %></p>
            <sub><%= @offer.location %></sub>
          </div>
        </div>
      </div>
    </div>

    <div class="booking-info">
      <p><strong>Offer id:</strong> <%= @booking.offer_id %></p>
      <p><strong>Start date:</strong> <%= @booking.start_date %></p>
      <p><strong>End date:</strong> <%= @booking.end_date %></p>
    </div>
  </div>

  <!-- message -->
  <div class="messages">
    <!-- top -->
    <div class="d-flex justify-content-between" id="top-messages-info">
      <h3 
        style="font-weight: 500; font-size: 22px;" 
        id="user-h3"
        class="text-center pt-2 pb-3">
        <% if @booking.created_by?(current_user) %>
          Send a message to <%= @offer.user.first_name %>
        <% else %>
          Send a message to <%= @booking.user.first_name %>
        <% end %>
      </h3>
    </div>

    <!-- messages display -->
    <div class="pl-4 pr-4" id="messages" data-booking-id="<%= @booking.id %>">
      <div class="messages-display">
        <div class="text-center">
          <i class="fa fa-comments" aria-hidden="true"></i>
        </div>
        <!-- <% @booking.messages.each do |message| %> -->
          <div class="d-flex pb-2">
            <div class="pr-3">
              <!-- <%=  cl_image_tag message.user.photo.key, :width => 148, :height => 148, :crop => :fill %> -->
            </div>
            <!-- <%= render 'messages/message', message: message %>   -->
            

        <!-- <% end %> -->
      </div>
     
      <!-- input message -->
      <div class="input-message">
        <!-- <%= simple_form_for [ @booking, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, class: "input-message" %>
        <% end %> -->
        <input style="height: 50px;" type="text" class="input-message" placeholder="Enter your message here">
      </div>
    </div>
  </div>
</div>
