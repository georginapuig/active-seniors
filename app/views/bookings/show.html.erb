<div class="d-flex justify-content-center pt-5">
  <!-- booking confirmed -->
  <div class="booking-confirmed mr-5">
    <!-- <h2 id="booking-confirmed-h2">Booking confirmed</h2> -->
    <div class="text-center">
      <i class="fa fa-check-circle" aria-hidden="true"></i>
    </div>
    <h3 
      style="font-weight: 500; font-size: 22px;" 
      id="user-h3"
      class="text-center pb-4">
        <%= @booking.user.first_name %>, your booking is confirmed
    </h3>
  </div>

  <!-- message -->
  <div class="messages">
    <!-- top -->
    <div class="d-flex justify-content-between" id="top-messages-info">
      <h3 
        style="font-weight: 500; font-size: 22px;" 
        id="user-h3"
        class="text-center pt-2 pb-3">
          Send a message to <%= @offer.user.first_name %>
      </h3>
    </div>

    <!-- messages display -->
    <div class="pl-4 pr-4" id="messages" data-booking-id="<%= @booking.id %>">
      <div class="messages-display">
        <% @booking.messages.each do |message| %>
        <div class="d-flex pb-2">
          <div class="pr-3">
            <%=  cl_image_tag message.user.photo.key, :width => 148, :height => 148, :crop => :fill %>
          </div>
          <%= render 'messages/message', message: message %>  
        </div>
      <% end %>
      </div>
     
      <!-- input message -->
      <div class="input-message">
        <%= simple_form_for [ @booking, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, class: "input-message" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
